<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>AdminHomeServlet</servlet-name>
        <servlet-class>com.product.productassignment.AdminHomeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminHomeServlet</servlet-name>
        <url-pattern>/admin/auth/home</url-pattern>
    </servlet-mapping>

    <!-- Start Product management -->
    <servlet>
        <servlet-name>ListProductServlet</servlet-name>
        <servlet-class>com.product.productassignment.controller.products.ListProductServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ListProductServlet</servlet-name>
        <url-pattern>/admin/products/list</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CreateProductServlet</servlet-name>
        <servlet-class>com.product.productassignment.controller.products.CreateProductServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreateProductServlet</servlet-name>
        <url-pattern>/admin/products/create</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>EditProductServlet</servlet-name>
        <servlet-class>com.product.productassignment.controller.products.EditProductServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EditProductServlet</servlet-name>
        <url-pattern>/admin/products/edit</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>DetailProductServlet</servlet-name>
        <servlet-class>com.product.productassignment.controller.products.DetailProductServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DetailProductServlet</servlet-name>
        <url-pattern>/admin/products/detail</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>DeleteProductServlet</servlet-name>
        <servlet-class>com.product.productassignment.controller.products.DeleteProductServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteProductServlet</servlet-name>
        <url-pattern>/admin/products/delete</url-pattern>
    </servlet-mapping>
</web-app>